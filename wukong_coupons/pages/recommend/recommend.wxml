<wxs module="m1">
  var numberToFix = function (value) {
    return value.toFixed(2)
  }
  module.exports.numberToFix = numberToFix;
</wxs>
<view class="goods-card" wx:for="{{couponList}}" wx:key="{{index}}">
  <view class="item">
    <view class="icon">
      <image class="image" src="{{item.pict_url}}" mode="aspectFit"></image>
    </view>
    <view class="detail">
      <view class="title">{{item.title}}</view>
      <view class="data">
        <view class="price">
          <view class="flag">券后价</view>
          <view>￥{{item.zk_final_price}}</view>
        </view>
        <view class="zan-card__detail-row">原价￥{{item.reserve_price}}  月销量{{item.volume}}</view>
      </view>
    </view>
    <view class="line"></view>
    <view class="coupon">
      <button class="text" data-item="{{item.item_id}}" bindtap="setCouponInfo">立即领取</button>
    </view>
  </view>
</view>